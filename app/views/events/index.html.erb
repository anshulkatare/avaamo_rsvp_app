<%= flash_messages %>
<h2>Events List</h2>
<div class="event-block">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th class="col-md-2">Title</th>
      <th class="col-md-2">Description</th>
      <th class="col-md-4">Start Time</th>
      <th class="col-md-4">End Time</th>
      <th class="col-md-2">Creator</th>
      <th class="col-md-2">Options</th>
    </tr>
    </thead>
    <tbody>
    <% @events.each do |event| %>
      <tr>
        <td class="col-md-2"><%= event.title %></td>
        <td class="col-md-2"><%= event.description %></td>
        <td class="col-md-2"><%= event.start_time %></td>
        <td class="col-md-2"><%= event.end_time %></td>
        <td class="col-md-2"><%= event.user.try(:email) %></td>
        <td class="col-md-4">
          <%= link_to 'Show', event_path(event), class: "btn btn-info" %>
          <%= link_to 'Edit', edit_event_path(event), class: "btn  btn-warning" %>
          <%= link_to 'Destroy', event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to 'New Event', new_event_path, class: "btn btn-primary" %>
